<article>
  <a href="/dash"> &larr; Your Profile</a>
  <h2>
    Edit Post
  </h2>
  <form class="editPost">
    <div>
      <input name="postTitle" type="text" value="{{post.title}}" />
    </div>
    <div>
      <textarea name="postText">{{post.content}}</textarea>
    </div>
    <div>
      Posted by you on {{dateFormat post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Edit Post</button>
    <button type="button" class="delPostBtn">Delete Post</button>
  </form>
</article>

{{> comments post.comments}}

<script src="/js/editPost.js"></script>
<script src="/js/delPost.js"></script>