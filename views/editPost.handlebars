<article>
  <a href="/dash"> &larr; Your Dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <textarea name="post-text">{{post.content}}</textarea>
    </div>
    <div>
      Posted by you on {{dateFormat post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<!--Scripts-->
<script src="/javascript/addPost.js"></script>
<script src="/javascript/delPost.js"></script>
<script src="/javascript/comment.js"></script>