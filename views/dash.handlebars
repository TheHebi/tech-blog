<section class="new-post-section">
    <button type="submit" class="btn" id="create-new-post">+ Create new post</button>
</section>


{{#if posts.length}}
<section>
    <h2>Dashboard</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> postInfo post}}
            <a href="/dash/edit/{{post.id}}" class="edit-link">Edit</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/js/newPost.js"></script>