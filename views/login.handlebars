<section class="login-page">
    <div class="form-heading">
        <h1>Log In</h1>
    </div>
    <div class="form-section">
        <form class="login-form">
            <div>
                <label for="username-login">Username</label>
                <input type="text" class="entry-field" id="username" />
            </div>
            <div>
                <label for="password-login">Password</label>
                <input type="password" class="entry-field" id="password" />
            </div>
            <div>
                <button type="submit" class="login-signup-btn">Log In!</button>
            </div>
        </form>
    </div>

    <a href="/register" class="sign-in-link" id="login">Don't Have an account? Register here!</a>
</section>

<script src="/js/login.js"></script>